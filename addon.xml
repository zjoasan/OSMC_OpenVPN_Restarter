<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.OSMC_OpenVPN_Restarter" name="OSMC OpenVPN Restarter" version="0.0.2" provider-name="Zjoasan">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="addon.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <language/>
        <platform>linux</platform>
        <disclaimer>For Kodi linux (tested on OSMC final)</disclaimer>
        <summary lang="en">Runs a shell script to restart OpenVPN service on OSMC</summary>
        <description lang="en">Simple plugin that starts a vpnrestart.sh, where it stops the service waits 3 seconds and starts it again</description>
        <website>https://github.com/zjoasan/OSMC_OpenVPN_Restarter/</website>
        <email>joakim.s@webbkontakt.net</email>
    </extension>
</addon>
